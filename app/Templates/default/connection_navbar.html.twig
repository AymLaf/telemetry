<div class="popup-connection">

   <form method="post" action="{{path_for('sendConnection')}}">
      <div class="form-group">
         <input class="form-control" name="user" type="text" required="required" placeholder="Username" autofocus>
      </div>

      <div class="form-group">
         <input class="form-control" name="password" type="password" required="required" placeholder="Password">
      </div>

      <button type="submit" class="btn btn-outline-primary">Connect</button>
      <a href="{{path_for('register')}}" class="btn btn-outline-primary pull-right">Register</a>
      {{ csrf | raw }}

   </form>

</div>