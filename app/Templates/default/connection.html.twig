{% extends "partials/base.html.twig" %}
{% block title %}Connection{% endblock %}

{% block header %}
{% set myheader= {
   'title': '<i class="fa fa-user-circle"></i> Connection',
   'text':  'Connect to manage your references',
} %}
{{ parent() }}
{% endblock %}

{% block content %}
<div class="container">

   <form method="post">
      <div class="form-group">
         <label for="username">Username</label>
         <input class="form-control" name="user" type="text" required="required">
      </div>

      <div class="form-group">
         <label for="password">Password</label>
         <input class="form-control" name="password" type="password" required="required">
      </div>

      <button type="submit" class="btn btn-outline-primary">Connect</button>

      {{ csrf.field | raw }}
   </form>

</div>
{% endblock %}

{% block userscripts %}
{{ parent() }}

<script src='https://www.google.com/recaptcha/api.js'></script>

{% endblock %}

