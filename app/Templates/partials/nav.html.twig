<header class="navbar navbar-toggleable-md navbar-light bg-faded">
   <nav class="container">
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
         <span class="navbar-toggler-icon"></span>
      </button>
      <a class="navbar-brand" href="{{path_for("telemetry")}}">
          <img src="{{path_for('logo')}}" title="{{project_name}} Usage" alt="" />
      </a>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
         <div class="navbar-nav">
            <a class="nav-item nav-link {{ class == 'telemetry' ? 'active'}}"
               href="{{path_for("telemetry")}}">
               <i class='fa fa-bar-chart'></i>
               Telemetry</a>
            <a class="nav-item nav-link {{ class == 'reference' ? 'active'}}"
                href="{{path_for('reference')}}">
               <i class='fa fa-users'></i>
               References</a>
           {% if enable_contact %}
            <a class="nav-item nav-link {{ class == 'contact' ? 'active'}}"
                href="{{path_for('contact')}}">
               <i class='fa fa-envelope'></i>
               Contact</a>
           {% endif %}
           {% if enable_connection and enable_connection_tab %}
            <a class="nav-item nav-link {{ class == 'connection' ? 'active'}}"
                href="{{path_for('connection')}}">
               <i class='fa fa-user-circle'></i>
               Connection</a>
           {% endif %}
           {% if enable_register and enable_register_tab %}
            <a class="nav-item nav-link {{ class == 'register' ? 'active'}}"
                href="{{path_for('register')}}">
               <i class='fa fa-address-book'></i>
               Register</a>
           {% endif %}
           {% if enable_profile_tab %}
            <a class="nav-item nav-link {{ class == 'profile' ? 'active'}}"
                href="{{path_for('profile')}}">
               <i class='fa fa-user'></i>
               Profile</a>
           {% endif %}
           {% if enable_admin and enable_admin_tab %}
            <a class="nav-item nav-link {{ class == 'admin' ? 'active'}}"
                href="{{path_for('admin')}}">
               <i class='fa fa-cog'></i>
               Admin</a>
           {% endif %}
           {% if enable_disconnect_tab %}
            <a class="nav-item nav-link {{ class == 'connection' ? 'active'}}"
               href="{{path_for('disconnect')}}">
               <i class='fa fa-sign-out'></i>
               Disconnect</a>
           {% endif %}
         </div>
      </div>
   </nav>
</header>
